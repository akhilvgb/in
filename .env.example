# Export Platform Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME="Export Platform"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://workspace.calicutspicetraders.in
APP_SECRET=your-super-secret-key-here-change-this

# Database Configuration (Hostinger MySQL)
DB_HOST=localhost
DB_NAME=export_platform
DB_USER=your_db_username
DB_PASS=your_db_password
DB_CHARSET=utf8mb4

# Company Information
COMPANY_NAME="Calicut Spice Traders"
COMPANY_EMAIL=info@calicutspicetraders.in
COMPANY_PHONE="+91-495-2345678"
COMPANY_ADDRESS="Spice Market Road, Kozhikode, Kerala, India"

# Email Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=notifications@calicutspicetraders.in
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=notifications@calicutspicetraders.in
MAIL_FROM_NAME="${COMPANY_NAME}"

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif
UPLOAD_PATH=public/uploads

# Security Settings
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=7200
PASSWORD_HASH_ALGO=bcrypt
API_RATE_LIMIT=100

# Real-time Settings
SSE_HEARTBEAT_INTERVAL=30
SSE_MAX_CONNECTIONS=50
SSE_CONNECTION_TIMEOUT=300

# Cache Settings (Hostinger compatible)
CACHE_DRIVER=file
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_PATH=storage/logs
LOG_MAX_FILES=10

# External API Keys (if needed)
MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# Backup Settings
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=storage/backups

# PHP Settings (for reference)
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=120
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=12M

# OPcache Settings (Hostinger optimization)
OPCACHE_ENABLE=1
OPCACHE_JIT_BUFFER_SIZE=100M
OPCACHE_PRELOAD_PATH=scripts/opcache_preload.php

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_API_DOCUMENTATION=false
ENABLE_ANALYTICS=true

# Development Settings (disable in production)
ENABLE_QUERY_LOG=false
ENABLE_PROFILER=false
SHOW_ERROR_DETAILS=false

# Timezone
TIMEZONE=Asia/Kolkata

# Locale Settings
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,en_GB

# Currency Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,INR,GBP,AUD

# Business Settings
DEFAULT_SHIPPING_ORIGIN=Kozhikode,Kerala,India
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=Asia/Kolkata

# Monitoring & Analytics
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_TRACKING_ID=your_analytics_id

# Third-party Integrations
SHIPPING_API_KEY=your_shipping_api_key
CUSTOMS_API_KEY=your_customs_api_key
PAYMENT_GATEWAY_KEY=your_payment_key

# Hostinger Specific Settings
HOSTINGER_SUBDOMAIN=workspace
HOSTINGER_MAIN_DOMAIN=calicutspicetraders.in
HOSTINGER_FILE_MANAGER_PATH=/domains/workspace.calicutspicetraders.in/public_html

# SSL/TLS Settings
FORCE_HTTPS=true
SSL_VERIFY_PEER=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/csp-report

# CORS Settings
CORS_ALLOWED_ORIGINS=https://workspace.calicutspicetraders.in,https://calicutspicetraders.in
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Admin Settings
ADMIN_EMAIL=admin@calicutspicetraders.in
ADMIN_NOTIFICATIONS=true
ADMIN_IP_WHITELIST=192.168.1.0/24

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="The Export Platform is currently under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1

# Performance Settings
ENABLE_GZIP_COMPRESSION=true
ENABLE_BROWSER_CACHING=true
CACHE_STATIC_ASSETS=true

# Search Engine Settings
ROBOTS_TXT_DISALLOW=/admin,/api,/uploads
SITEMAP_ENABLED=false

# Webhook Settings (for external integrations)
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30

# Queue Settings (file-based for Hostinger)
QUEUE_DRIVER=file
QUEUE_RETRY_AFTER=90
QUEUE_MAX_TRIES=3

# Notification Channels
NOTIFICATIONS_VIA_EMAIL=true
NOTIFICATIONS_VIA_SMS=false
NOTIFICATIONS_VIA_SLACK=false

# Data Retention
DATA_RETENTION_DAYS=2555
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Export/Import Settings
EXPORT_FORMAT=csv,pdf,excel
IMPORT_BATCH_SIZE=100
EXPORT_TIMEZONE=UTC

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# Database Connection Pool (if supported)
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_TIMEOUT=30

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_ROUNDS=12

# Two-Factor Authentication
ENABLE_2FA=false
2FA_ISSUER="Export Platform"

# OAuth Settings (if needed)
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Deployment Information
DEPLOYED_AT=2024-01-01T00:00:00Z
DEPLOYED_BY=system
DEPLOYMENT_VERSION=1.0.0
GIT_COMMIT=initial-commit
